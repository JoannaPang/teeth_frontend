<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"

    android:layout_height="wrap_content"

    android:background="@drawable/shape_conner_white_bg"

    android:gravity="center"

    android:orientation="vertical"

    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="1.请在拍照时长大嘴巴
        \n2.请尽量保证整颗牙齿足够清晰足够大
        \n3.请拍摄牙齿的正面
        \n4.跳转后拍照前请使用WiFi链接内窥镜
        \n5.请拍出像如下示例一样的图片哦"

        android:textColor="@color/colorTitleBar"
        android:lineSpacingExtra="5dp"
        android:textSize="18sp" />

    <!--<TextView-->
        <!--android:id="@+id/tv_toast_content"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="5dp"-->

        <!--android:text="拍摄示例图如下"-->
        <!--android:textColor="@color/colorTitleBar"-->

        <!--android:textSize="12dp" />-->

    <ImageView
        android:layout_width="300dp"

        android:layout_height="300dp"

        android:layout_margin="10dp"

        android:background="@drawable/my_ic_launcher1"

        android:padding="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector_white_background_blue_border"
            android:textColor="@color/colorTitleBar"
            android:text="取消" />

        <Button
            android:id="@+id/dialog_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/throid_button_selector"
            android:textColor="@color/colorWhite"
            android:text="确定" />

    </LinearLayout>


</LinearLayout>
