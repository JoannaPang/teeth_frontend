<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.myapplication.MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            >

            <ImageView
                android:layout_width="64mm"
                android:layout_height="36mm"
                android:background="@drawable/login_image"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:layout_marginTop="50dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--<EditText
                    android:id="@+id/editText_login_username"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:selectAllOnFocus="true"
                    android:textSize="@dimen/font_h3"
                    android:textColor="#e0000000"
                    android:background="@drawable/edittext_yuanjiaojuxing"
                    />-->
                <!--pang_fix_20190617-->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/user_icon_simple"

                    />
                <EditText
                    android:id="@+id/editText_login_username"
                    android:singleLine="true"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"

                    android:hint="请输入用户名"
                    android:selectAllOnFocus="true"
                    android:textSize="@dimen/font_h3"
                    android:textColor="#e0000000"
                    android:background="@drawable/button_selector_white_background_blue_border"
                    />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--<EditText
                    android:id="@+id/editText_login_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:selectAllOnFocus="true"
                    android:inputType="textPassword"
                    android:textColor="#e0000000"
                    android:textSize="@dimen/font_h3"
                    android:background="@drawable/edittext_yuanjiaojuxing"
                    />-->
                <!--pang_fix_20190617-->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/code_icon_simple"
                    />
                <EditText
                    android:id="@+id/editText_login_password"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入密码"
                    android:selectAllOnFocus="true"
                    android:inputType="textPassword"
                    android:textColor="#e0000000"
                    android:textSize="@dimen/font_h3"
                    android:background="@drawable/button_selector_white_background_blue_border"
                    />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="50dp">

            <Button
                android:id="@+id/view_to_register"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_selector_white_background_blue_border"
                android:text="注册"
                android:textColor="@drawable/textcolor_selector"
                android:textSize="@dimen/font_h3" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/throid_button_selector"
                android:text="登录"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_h2" />

                <!--<TextView
                    android:id="@+id/login_to_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="设置服务器地址/端口号"
                    android:textColor="@drawable/textcolor_selector"
                    android:textSize="@dimen/font_h3" />-->
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
