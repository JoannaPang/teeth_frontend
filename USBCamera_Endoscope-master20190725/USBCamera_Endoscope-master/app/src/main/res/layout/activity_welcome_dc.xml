<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.example.myapplication.WelcomeActivity"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <ViewFlipper
            android:id="@+id/splash_viewFlipper"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/splash_item_0" />
            <include layout="@layout/splash_item_1" />
            <include layout="@layout/splash_item_2" />
        </ViewFlipper>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/yindaoye_button"
            android:layout_width="150dp"
            android:textSize="@dimen/font_h2"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/throid_button_selector"
            android:text="欢迎使用"
            android:textColor="@color/colorWhite"
            />

    </RelativeLayout>

</RelativeLayout>